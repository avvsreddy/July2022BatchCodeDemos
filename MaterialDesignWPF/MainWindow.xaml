<Window x:Class="MaterialDesignWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaterialDesignWPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="717">
    <Grid Margin="0,0,580,0">
        <Button Style="{StaticResource MaterialDesignFlatAccentBgButton}"
            x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="491,173,0,0" VerticalAlignment="Top"/>
        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            x:Name="textBox" HorizontalAlignment="Left" Margin="476,268,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ListBox Style="{StaticResource MaterialDesignCardsListBox}"
            x:Name="listBox" d:ItemsSource="{d:SampleData ItemCount=5}"/>


    </Grid>
</Window>
