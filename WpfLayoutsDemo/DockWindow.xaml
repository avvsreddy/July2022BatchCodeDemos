<Window x:Class="WpfLayoutsDemo.DockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayoutsDemo"
        mc:Ignorable="d"
        Title="DockWindow" Height="450" Width="800">
    <DockPanel>
        <Button>Button 1 Left</Button>
        <Button DockPanel.Dock="Right">Button 2 Right</Button>
        <Button DockPanel.Dock="Bottom">Button 3 Botton</Button>
        <Button DockPanel.Dock="Top">Button 4 Top</Button>
        <RichTextBox></RichTextBox>
    </DockPanel>
</Window>
